<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/viewHolderImageView"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.785" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/viewHolderYearTextView"
            android:layout_marginEnd="124dp" android:layout_marginRight="124dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:id="@+id/viewHolderTitleTextView" app:layout_constraintStart_toEndOf="@+id/viewHolderImageView"
            android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:id="@+id/viewHolderYearTextView"
            app:layout_constraintStart_toEndOf="@+id/viewHolderImageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintVertical_bias="0.826"/>


</androidx.constraintlayout.widget.ConstraintLayout>