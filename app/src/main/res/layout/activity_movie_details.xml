<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MovieDetailsActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/txtImageDetails"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="5dp"/>

            <TextView
                    android:id="@+id/txtTitleDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>
            <TextView
                    android:id="@+id/txtYearDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>
            <TextView
                    android:id="@+id/txtRatedDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtReleasedDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtRunTimeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtGenreDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtDirectorDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtWriterDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtActorsDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

            <TextView
                    android:id="@+id/txtPlotDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="3dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>